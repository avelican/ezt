{
	"extends": "tslint:recommended",
	"rules": {
	    "max-line-length": {
		   "options": [120]
	    },
	    "one-variable-per-declaration": false,
	    "max-classes-per-file": false,
	    "semicolon": [true, "always"],
	    "no-console": false,

	    "new-parens": true,
	    "no-arg": true,
	    "no-bitwise": true,
	    "no-conditional-assignment": true,
	    "no-consecutive-blank-lines": false
	},
	"jsRules": {
	    "max-line-length": {
		   "options": [120]
	    }
	}
 }